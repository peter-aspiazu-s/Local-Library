extends layout

block content

  h1 #{title}: #{book.title}
  p= book.lifespan

  if book_bookinstances.length

    p #[strong Delete the following booksinstances before attempting to delete this book.]
    div(style='margin-left:20px;margin-top:20px')
      h4 BooksInstances
      dl
        each bookinstances in book_bookinstances
          dt
            a(href=bookinstances.url) #{bookinstances.imprint}
          dd #{bookinstances.status}

  else
    p Do you really want to delete this Book?

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value=book._id )

      button.btn.btn-primary(type='submit') Delete
