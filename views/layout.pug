    style.
      /* Estilo para el botón flotante */
      .floating-button {
        position: fixed;
        bottom: 15px;
        right: 15px;
        background-color: #007bff;
        color: white;
        border-radius: 50px;
        width: 50px;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        padding-bottom: 3px;
        font-size: 24px;
        text-align: center;
        text-decoration: none;
        opacity: 0.6;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        transform: rotate(0deg);
        transition: all 0.3s ease;
        cursor: pointer;
      }

      .floating-button:hover {
        opacity: 1;
        color: white;
        transform: rotate(139deg);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0);
        text-decoration: none;
      }

      /* Contenedor de enlaces adicionales */
      .floating-menu {
        position: fixed;
        bottom: 60px; /* Altura del botón flotante + margen */
        right: 15px;
        display: none;
        flex-direction: column;
        gap: 10px;
      }

      .floating-menu a {
        background-color: #007bff;
        color: white;
        border-radius: 20px;
        width: 200px;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 16px;
        text-decoration: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        transition: opacity 0.3s ease;
        opacity: 0.8;
      }

      /* Mostrar enlaces al hacer hover sobre el botón */
      .floating-button:hover + .floating-menu,
      .floating-menu:hover {
        display: flex;
      }
