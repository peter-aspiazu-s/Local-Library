extends layout

block content
  h1.text-center.mt-4.mb-4= title

  if author_list.length
    div(class="author-list-container")
      each author in author_list
        div(class="card mb-3 shadow-sm")
          div(class="card-body")
            h5(class="card-title")
              a(href=author.url class="text-decoration-none text-dark") #{author.name}
            p(class="card-text text-muted")
              | #{author.date_of_birth_formatted} - #{author.date_of_death_formatted}

  else
    div(class="alert alert-warning text-center mt-4")
      p There are no authors.
